    "paths": {
        "/weather": {
            "get": {
                "summary": "Get a data about current weather",
                "description": "Get a data about current weather",
                "operationId": "weatherData",
                "parameters": [
                    {
                        "name": "cities",
                        "in": "query",
                        "description": "Cities",
                        "required": false,
                        "schema": {
                            "schema": "ArrayField",
                            "properties": {
                                "city[]": {
                                    "type": "array",
                                    "items": {
                                        "anyOf": [
                                            {
                                                "type": "string"
                                            }
                                        ]
                                    }
                                }
                            },
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
